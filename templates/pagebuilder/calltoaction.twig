<section class="mod-calltoaction bg-{{ item.achtergrond }}">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-center">
        {% if item.titel %}
          <h3 class="text-center">{{ item.titel }}</h2>
        {% endif %}
      	{% if item.content %}
        	{{ item.content }}
        {% endif %}
				{% if item.knop %}
					<br><br>
					<div class="text-center">
					<a class="btn {% if item.achtergrond == 'color' or item.achtergrond == 'darkblue' %} btn-light {% else %} btn-primary {% endif %}" target="{{ item.knop.target }}" href="{{ item.knop.url }}">
						{{ item.knop.title }} 
					</a>
					</div>
		    {% endif %}
			</div> 
		</div>
  </div>
</section>