{% if item.tekst %}
	<section class="mod-lead bg-{{ item.achtergrond }}">
	  <div class="container">
			<div class="row">
				<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
					{% if item.titel %}
						<h2 class="text-center"> {{ item.titel }} </h2>
					{% endif %}
					{% if item.tekst %}
						<span class="lead text-center">{{ item.tekst }}</span>
					{% endif %}
				</div>
			</div>
			<div class="threestars">
				{% if item.achtergrond == 'color' %}
					<img src="{{ theme.link }}/assets/images/star.svg" alt="star" data-aos="fade-right" data-aos-duration="600" data-aos-delay="0" />
					<img src="{{ theme.link }}/assets/images/star.svg" alt="star" data-aos="fade-left" data-aos-duration="600" data-aos-delay="0" />
					<img src="{{ theme.link }}/assets/images/star.svg" alt="star" data-aos="fade-up" data-aos-duration="600" data-aos-delay="0" />
				{% else %}
					<img src="{{ theme.link }}/assets/images/star_{{ options.kleurstelling }}.svg" alt="star" data-aos="fade-right" data-aos-duration="600" data-aos-delay="0" />
					<img src="{{ theme.link }}/assets/images/star_{{ options.kleurstelling }}.svg" alt="star" data-aos="fade-left" data-aos-duration="600" data-aos-delay="0" />
					<img src="{{ theme.link }}/assets/images/star_{{ options.kleurstelling }}.svg" alt="star" data-aos="fade-up" data-aos-duration="600" data-aos-delay="0" />
				{% endif %}
			</div>
	  </div>
	</section>
{% endif %}