<section class="mod-foto d-flex align-items-center" >
	<div class="bg" style="background-image: url({{ item.afbeelding }})">
	</div>
	<div class="bgc bg-{{ item.achtergrond }}"></div>
  <div class="container">
  	<div class="col-md-8 col-lg-6" data-aos="fade-right" data-aos-duration="800">
	  	{% if item.content %}
	    	<span class="lead">{{ item.content }}</span>
	    {% endif %}
			{% if item.knop %}
				<br>
				<a class="btn {% if item.achtergrond == 'color' or item.achtergrond == 'darkblue' %}btn-outline-light {% else %} btn-primary {% endif %}" target="{{ item.knop.target }}" href="{{ item.knop.url }}">
					{{ item.knop.title }} 
				</a>
	    {% endif %}
		</div>
	</div> 
</section>