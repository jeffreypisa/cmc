<section class="mod-youtube bg-{{ item.achtergrond }}">
	{% if item.toon == 'alle' %}
	  <div class="container">
			{% if item.titel %}
				<h2 class="h3 text-center"> {{ item.titel }} </h2>
			{% endif %}
			{% if item.tekst %}
				<div class="row">
	  			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-center">
	        	{{ item.tekst }}
	  			</div>
	    	</div>
			{% endif %}
			<div class="cards cards-archive">
				<div class="row">
					{% set delay = '0' %}
					{% for item in youtube %}  
						<div class="col-sm-6 col-md-4" data-aos="fade-up" data-aos-duration="800" data-aos-delay="0">
							{% include 'tease-youtube.twig' %}
						</div>
						{% set delay = delay + '25' %}
					{% endfor %}
				</div>
	    </div>
	  </div>
	{% elseif item.toon == 'kiezen' %}
	  <div class="container">
			{% if item.titel %}
				<h2 class="h3 text-center"> {{ item.titel }} </h2>
			{% endif %}
			{% if item.tekst %}
				<div class="row">
	  			<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-center">
	        	{{ item.tekst }}
	  			</div>
	    	</div>
			{% endif %}
			<div class="cards cards-archive">
				<div class="row justify-content-center">
					{% set delay = '0' %}
					{% for item in item.videos %}  
						<div class="col-sm-6 col-md-4" data-aos="fade-up" data-aos-duration="800" data-aos-delay="0">
							{% include 'tease-youtube.twig' %}
						</div>
						{% set delay = delay + '25' %}
					{% endfor %}
				</div>
	    </div>
	  </div>
	{% elseif item.toon == 'recent'  %}
		<div class="container">
			<div class="row">
				<div class="col d-flex align-items-center">
					{% if item.titel %}
						<h2 class="h3" style="margin: 0"> {{ item.titel }} </h2>
					{% endif %}
					{% if item.toelichting_luistercijfers %}
						<p> {{ item.toelichting_luistercijfers }} </p>
					{% endif %}
				</div>
				{% if item.knop %}
					<div class="col-auto d-flex align-items-center">
						<a class="btn {% if item.achtergrond == 'darkblue' or item.achtergrond == 'color' %} btn-outline-light {% else %} btn-primary {% endif %}" href="{{ item.knop.url }}">
							{{ item.knop.title }} 
						</a>
					</div>
				{% endif %}
			</div>
			<br>
			<div class="cards cards-archive">
				<div class="row">
					{% set delay = '0' %}
					{% for item in youtube|slice(0, 3) %}  
						<div class="col-sm-6 col-md-4" data-aos="fade-up" data-aos-duration="800" data-aos-delay="{{delay}}">
							{% include 'tease-youtube.twig' %}
						</div>
						{% set delay = delay + '100' %}
					{% endfor %}
				</div>
	    </div>
	  </div>
	{% endif %}
</section>