{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper {% if post.account %} w-100 {% endif %}">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<div class="article-body">
			  {% if post.content %}
				  <section class="bg-white">
						<div class="container">
						  <h1>{{ post.title }}</h1>
						  {{ post.content }}
						</div>
				  </section>
				{% else %}
					<h1 class="d-none">{{ post.title }}</h1>
				{% endif %}
			  {% include 'pagebuilder.twig' %}
			</div>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}