{% if menu %}
	<ul class="menu">
  	{% for item in menu %}
  		<li class="{{item.classes | join(' ')}} {% if item.title|lower == currentpostname %} current-menu-item {% endif %}">
  			<a href="{{item.get_link}}">{{item.title}}</a>
  			{% include "menu.twig" with {'menu': item.get_children} %}
  		</li>
  	{% endfor %}
	</ul>
{% endif %}